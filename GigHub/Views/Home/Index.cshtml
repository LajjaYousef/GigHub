@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}
<style type="text/css">.date { }

 .month { }

 .day { }

 .artist { }

 .genre { }
</style>
<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">

                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>

                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>

            </div>
            <div class="detials">

                <span class="artist">

                    @gig.Artist.Name
                </span> 
               
                <span class="genre">

                    @gig.Genre.Name
                    

                </span>
            </div>

        </li> 
    }
</ul>